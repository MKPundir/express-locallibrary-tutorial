extends layout

block content
    h1=title
    form(method='POST' action='')
        div.form-group
            label(for='first_name') First Name:
            input#first_name.form-control(type='text' name='first_name' placeholder='First name (susususu) last' required='true' value=(author === undefined ? '':author.first_name))
            label(for='last_name') Last Name:
            input#first_name.form-control(type='text' name='last_name' placeholder='Last name (surname)' required='true' value=(author === undefined ? '' : author.last_name))
        .form-group
            label(for='date_of_birth') Date of Birth:
            input#date_of_birth(type='date' name='date_of_birth' value=(author === undefined ? '' : author.dob))
            label(for='date_of_death') Date of Birth:
            input#date_of_death(type='date' name='date_of_death' value=(author === undefined ? '' : author.dod))
        button.btn.btn-primary(type='submit') Submit
    if(errors)
        for error in errors
            li!=error.msg

            